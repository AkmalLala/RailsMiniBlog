  <%= link_to 'New Article', new_article_path,class: "btn btn-outline-info",role: "button" %>
  <%= link_to "Download CSV", articles_path(format: "csv"),class: "btn btn-outline-primary",role: "button" %>
  <%= link_to "Download Excel", articles_path(format: "xls"),class: "btn btn-outline-success",role: "button" %>
