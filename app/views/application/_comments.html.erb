<% @comments.each do |comment| %>
  <div class="media mb-4" id="customer_<%= comment.id %>">
   <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
    <div class="media-body">
      <h5 class="mt-0"><%= comment.author %></h5>
      <%= comment.body %>
    </div>
  </div>
<% end %>
